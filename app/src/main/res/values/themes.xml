<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.Silenus" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/primary_light</item>
    <item name="colorSurface">@color/primary_light</item>
    <item name="colorPrimaryVariant">@color/primary_normal</item>
    <item name="colorOnPrimary">@color/black</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/secondary_light</item>
    <item name="colorSecondaryVariant">@color/secondary_normal</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <item name="android:actionMenuTextColor">?attr/colorOnPrimary</item>
    <!-- Customize your theme here. -->
    <item name="toolbarStyle">@style/ToolbarStyle</item>
    <item name="android:fontFamily">@font/quantico</item>
  </style>

  <style name="ToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
    <item name="titleTextColor">@color/black</item>
    <item name="android:background">?attr/colorPrimary</item>
  </style>

</resources>